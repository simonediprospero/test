<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.example.myproject.controller.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>RegistrazioneServlet</servlet-name>
    <servlet-class>com.example.myproject.controller.RegistrazioneServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>VisualizzaUtentiServlet</servlet-name>
    <servlet-class>com.example.myproject.controller.VisualizzaUtentiServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>InserisciLibroServlet</servlet-name>
    <servlet-class>com.example.myproject.controller.InserisciLibroServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RegistrazioneServlet</servlet-name>
    <url-pattern>/registrazione</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>VisualizzaUtentiServlet</servlet-name>
    <url-pattern>/visualizzaUtenti</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>InserisciLibroServlet</servlet-name>
    <url-pattern>/inserisciLibro</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
    <welcome-file>login_registrazione.jsp</welcome-file>
  </welcome-file-list>

</web-app>
